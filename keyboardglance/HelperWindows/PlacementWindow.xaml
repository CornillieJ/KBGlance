<Window x:Class="keyboardglance.HelperWindows.PlacementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:keyboardglance.HelperWindows"
        mc:Ignorable="d"
        Title="PlacementWindow" Height="450" Width="800" 
        AllowsTransparency="True" WindowStyle="None" ResizeMode="CanResizeWithGrip" Background="#D0202030"
        MouseDown="PlacementWindow_OnMouseDown"
        SizeChanged="PlacementWindow_OnSizeChanged"
        >
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnConfirm" FontSize="20" Content="Confirm Placement" Padding="10,5" Click="BtnConfirm_OnClick"/>
        </StackPanel>
        <Label Content="Use grip to resize ⇘" Foreground="White" 
               Margin="10"
               VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>

